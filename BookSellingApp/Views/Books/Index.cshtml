@model IEnumerable<BookSellingApp.Models.Book>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Welcome To Online Book Store Portal</h1>
<br />


<form asp-controller="Books" asp-action="SearchBook" method="get">
    <p>
        <div class="row">
            <div class="col-lg-6 col-sm-12">
                <input type="search" placeholder="Search book by name or zoner..." name="searchByNameOrZoner" value="@ViewData["BookInfo"]" class="form-control mb-2" />

            </div>
            <div class="col-lg-6 col-sm-12 d-grid pb-2">
                <input type="submit" value="search" class="btn btn-outline-dark" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-sm-12  d-grid gap-2 col-12 mx-auto pb-2">

                <a asp-action="Index" class="btn btn-outline-primary">Book List</a>
            </div>
            <div class="col-lg-6 col-sm-12  d-grid gap-2 col-12 mx-auto pb-2">
                <a asp-action="AddBook" class="btn btn-outline-danger">Add New Book</a>
            </div>
        </div>
    </p>
</form>
<br />
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Success !</strong> @TempData["AlertMessage"]
    </div>
}


<div class="row">



    @foreach (var book in Model)
    {

        <div class="col-lg-3 col-md-6 col-sm-12 col d-flex justify-content-center">
            <div class="card mb-4" style="width: 18rem;">
                <img class="card-img-top mx-auto d-block pt-4" style="width:200px; height:200px" src="/@book.ImageUrl" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@book.Name<p class="lead">(@book.Zoner)</p></h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-dark">Details</a>
                    <a asp-action="AddToCart" asp-route-id="@book.Id" class="btn btn-outline-info">Add Cart</a>
                    <a asp-action="DeleteBook" asp-route-id="@book.Id" class="btn btn-outline-danger">Remove</a>
                </div>
            </div>

        </div>

    }

</div>
